{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "always",
    "source.organizeImports": "always"
  },
  "yaml.schemas": {
    "./.astro/collections/creators.schema.json": "/src/content/creators/**",
    "./.astro/collections/games.schema.json": "/src/content/games/**"
  },
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  "typescript.tsdk": "node_modules/typescript/lib",
  "workbench.editor.customLabels.patterns": {
    // Astro
    "**/src/**/index.astro": "Astro Server Page",
    "**/src/**/_page.tsx": "Astro Client Page",
    // Astro Content
    "**/src/content/assets/*/*/*.mdx": "Assets ${dirname(1)} / ${dirname(0)} / ${filename}.${extname}",
    "**/src/content/resources/*/*/*.mdx": "Resources ${dirname(1)} / ${dirname(0)} / ${filename}.${extname}",
    "**/src/content/games/*/*/*.mdx": "Games ${dirname(1)} / ${dirname(0)}",
    "**/src/content/creators/*.mdx": "Creators ${filename}.${extname}",
    "**/src/content/docs/**/*.md": "Docs ${filename}.${extname}",
    "**/src/content/docs/**/*.mdx": "Docs ${filename}.${extname}"
  }
}
