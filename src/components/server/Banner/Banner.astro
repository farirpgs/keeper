---
import { Image } from "astro:assets";
import { UI } from "../../../components/ui/ui";

type Props = {
  src: ImageMetadata;
  alt: string;
  class?: string;
};

const props = Astro.props;
const ratio = 4 / 1.2;
---

<div
  class:list={[
    "absolute hidden dark:block",
    "top-0 left-0 z-[-1] h-full w-full",
    "pointer-events-none",
    "opacity-30",
    props.class,
  ]}
>
  <UI.Box className="">
    <UI.AspectRatio ratio={ratio}>
      <Image
        loading="eager"
        quality={"low"}
        src={props.src}
        alt={props.alt}
        onload={"this.style.opacity = 1"}
        class={"print:hidden transition-opacity duration-1000"}
        style={{
          position: "absolute",
          top: "0",
          left: "0",
          objectFit: "cover",
          objectPosition: "center",
          width: "100%",
          height: "100%",
          borderRadius: "var(--radius-2)",
          filter: "blur(50px)",
          zIndex: -1,
          opacity: 0,
        }}
      />
    </UI.AspectRatio>
  </UI.Box>
</div>
