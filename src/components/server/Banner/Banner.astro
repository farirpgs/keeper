---
import { AspectRatio, Box } from "@radix-ui/themes";
import { Image } from "astro:assets";

type Props = {
  src: ImageMetadata;
  alt: string;
  class?: string;
};

const props = Astro.props;
const ratio = 4 / 1.2;
---

<div
  class:list={[
    "absolute hidden dark:block",
    "left-0 top-0 z-[-1] h-full w-full",
    "pointer-events-none",
    "opacity-30",
    props.class,
  ]}
>
  <Box className="">
    <AspectRatio ratio={ratio}>
      <Image
        loading="eager"
        quality={"low"}
        src={props.src}
        alt={props.alt}
        class={"print:hidden"}
        style={{
          position: "absolute",
          top: "0",
          left: "0",
          objectFit: "cover",
          objectPosition: "center",
          width: "100%",
          height: "100%",
          borderRadius: "var(--radius-2)",
          filter: "blur(50px)",
          zIndex: -1,
        }}
      />
    </AspectRatio>
  </Box>
</div>
