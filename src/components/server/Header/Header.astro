---
import { BookmarkFilledIcon } from "@radix-ui/react-icons";
import { Box, Button, Flex, Grid } from "@radix-ui/themes";
import { SquareLibrary } from "lucide-react";
import { DiceRollerButton } from "../../client/DiceRoller/DiceRoller";
import { getSurfaceStyle } from "../../client/Surface/getSurfaceStyle";
---

<Grid
  justify={"between"}
  align={"center"}
  columns="3"
  className="mb-16 mt-9 rounded-[--radius-2] border-b border-l border-r border-t border-[--accent-4] px-6 py-6 print:hidden"
  style={{
    ...getSurfaceStyle(),
  }}
>
  <Flex justify={"start"}>
    <a href="/">
      <Button
        highContrast
        color="gray"
        radius="full"
        size="4"
        variant="ghost"
        className="cursor-pointer"
      >
        <BookmarkFilledIcon className="h-[24px] w-[24px]" />
        <span class="hidden font-bold sm:inline-block">Keeper</span>
      </Button>
    </a>
  </Flex>
  <Flex gap="4" justify="center">
    <a href="/campaigns">
      <Button
        radius="full"
        size="3"
        variant="outline"
        className="cursor-pointer"
      >
        <SquareLibrary />
        <span class="hidden lg:inline-block">My Campaigns</span>
      </Button>
    </a>
  </Flex>
  <Flex justify={"end"} gap="5">
    <Box className="hidden sm:inline-block">
      <DiceRollerButton client:idle />
    </Box>
    <a href="/docs">
      <Button radius="full" size="3" variant="ghost" className="cursor-pointer">
        Docs
      </Button>
    </a>
  </Flex>
</Grid>
