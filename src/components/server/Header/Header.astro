---
import { MagnifyingGlassIcon } from "@radix-ui/react-icons";
import {
  Box,
  Button,
  Flex,
  Grid,
  Text,
  VisuallyHidden,
} from "@radix-ui/themes";
import { SquareLibrary } from "lucide-react";
import { AppUrl } from "../../../domains/app-url/AppUrl";
import { DiceRollerButton } from "../../client/DiceRoller/DiceRoller";
import { getSurfaceStyle } from "../../client/Surface/getSurfaceStyle";
import Patreon from "./Patreon.astro";
import { StoriedNameLogo } from "./Storied";
import ThemeToggle from "./ThemeToggle.astro";
---

<Grid
  justify={"between"}
  align={"center"}
  columns="3"
  className="my-9 items-center rounded-[--radius-2] border-b border-l border-r border-t border-[--accent-4] px-6 py-5 initial:my-6 print:hidden"
  style={{
    ...getSurfaceStyle(),
  }}
>
  <Flex justify={"start"}>
    <a href={AppUrl.home()}>
      <Button
        highContrast
        radius="full"
        size="4"
        variant="ghost"
        className="my-0 cursor-pointer"
      >
        {
          false && (
            <StoriedNameLogo className="h-[1.5rem] fill-[currentColor]" />
          )
        }
        <Text className="text-[1.5rem] font-bold"> STORIED </Text>
      </Button>
    </a>
  </Flex>
  <Flex gap="4" justify="center">
    <a href={AppUrl.campaigns()}>
      <Button
        radius="full"
        size="3"
        variant="ghost"
        className="m-0 cursor-pointer"
      >
        <SquareLibrary />

        <span class="hidden lg:inline-block">My Campaigns</span>
        <VisuallyHidden> My Campaigns </VisuallyHidden>
      </Button>
    </a>
  </Flex>
  <Flex justify={"end"} gap="2" align={"center"}>
    {
      false && (
        <Box className="hidden sm:inline-block">
          <DiceRollerButton client:idle />
        </Box>
      )
    }
    <a href={AppUrl.docs()}>
      <Button
        radius="full"
        size="3"
        variant="ghost"
        className="m-0 hidden cursor-pointer md:inline-block"
      >
        Docs
      </Button>
    </a>

    <a
      href={AppUrl.search({
        query: "",
        type: "all",
      })}
      aria-label="Search"
    >
      <Button
        radius="full"
        size="3"
        variant="ghost"
        className="m-0 cursor-pointer"
      >
        <MagnifyingGlassIcon className="h-[24px] w-[24px]" />
      </Button>
    </a>
    <a href={AppUrl.patreon()} target="_blank">
      <Button
        radius="full"
        size="3"
        variant="ghost"
        className="m-0 cursor-pointer"
      >
        <Patreon />
        <span class="hidden lg:inline-block">Become a member</span>
      </Button>
    </a>
    {false && <ThemeToggle />}
  </Flex>
</Grid>
